@model PortalUslug.Models.View.ServiceFilterViewModel


@using (Html.BeginForm("Details", "ServiceProvider", FormMethod.Get, htmlAttributes: new { @id = "serviceSearch", @class = "form-inline" }))
{
    <div id="searchFilter">
        <div class="row">
            <div class="col-sm-4">
                @Html.Label("Nazwa: ", htmlAttributes: new { })
                @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control", @size = 40, @maxlenght = 40 } })
            </div>
            <div class="col-sm-4">
                @Html.Label("Treść: ", htmlAttributes: new { })
                @Html.EditorFor(model => model.ServiceContent, new { htmlAttributes = new { @class = "form-control", @size = 20, @maxlenght = 30 } })
            </div>
            <div class="col-sm-4">
                @Html.Label("Kategoria: ", htmlAttributes: new { })
                @Html.DropDownList("CategoryId", Model.Categories, "Wybierz categorię", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <br />

        <input type="submit" value="Filtruj" class="btn btn-primary btn-block center-block" />


    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
